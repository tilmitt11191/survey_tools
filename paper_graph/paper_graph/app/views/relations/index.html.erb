<p id="notice"><%= notice %></p>

<h1>Listing Relations</h1>

<table>
  <thead>
    <tr>
      <th>Src</th>
      <th>Dst</th>
      <th>Type</th>
      <th>Strength</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relations.each do |relation| %>
      <tr>
        <td><%= relation.src_id %></td>
        <td><%= relation.dst_id %></td>
        <td><%= relation.type %></td>
        <td><%= relation.strength %></td>
        <td><%= link_to 'Show', relation %></td>
        <td><%= link_to 'Edit', edit_relation_path(relation) %></td>
        <td><%= link_to 'Destroy', relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

